void MainControl (double* vx, double* vy)
    {
    if (GetAsyncKeyState (VK_LEFT))  (*vx)--;
    if (GetAsyncKeyState (VK_RIGHT)) (*vx)++;
    if (GetAsyncKeyState (VK_UP))    (*vy)--;
    if (GetAsyncKeyState (VK_DOWN))  (*vy)++;
    if (GetAsyncKeyState ('Q'))
        {
        (*vx) = 0;
        (*vy) = 0;
        }
    }





